<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/craftPage">

    <Button
        android:id="@+id/button_Craft_C_Game"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="초성 놀이"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Craft_title" />

    <Button
        android:id="@+id/button_Craft_U_Game"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="유의어 놀이"
        app:layout_constraintBottom_toTopOf="@+id/view_Craft"
        app:layout_constraintStart_toEndOf="@+id/button_Craft_C_Game" />

    <TextView
        android:id="@+id/textView_Craft_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="90dp"
        android:text="놀이 제작"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_Craft"
        android:layout_width="325dp"
        android:layout_height="360dp"
        android:layout_marginTop="20dp"
        android:background="#FFDBDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Craft_C_Game" />

    <Button
        android:id="@+id/button_Craft_to_Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:text="이전"
        app:layout_constraintBottom_toBottomOf="@+id/view_Craft"
        app:layout_constraintStart_toStartOf="@+id/view_Craft" />

    <Button
        android:id="@+id/button_Craft_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:text="단어 등록"
        app:layout_constraintBottom_toBottomOf="@+id/view_Craft"
        app:layout_constraintEnd_toEndOf="@+id/view_Craft" />

    <TextView
        android:id="@+id/textView_Craft_C_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="초성"
        android:textSize="28sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/view_Craft"
        app:layout_constraintTop_toTopOf="@+id/view_Craft" />

    <EditText
        android:id="@+id/editTextText_Craft_C_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="ㅇㅅ"
        android:inputType="text"
        android:maxLength="4"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/textView_Craft_C_1"
        app:layout_constraintTop_toTopOf="@+id/textView_Craft_C_1" />

    <TextView
        android:id="@+id/textView_Craft_C_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="단어"
        android:textSize="28sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/view_Craft"
        app:layout_constraintTop_toBottomOf="@+id/textView_Craft_C_1" />

    <EditText
        android:id="@+id/editTextText_Craft_C_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="예시"
        android:inputType="text"
        android:maxLength="4"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/textView_Craft_C_2"
        app:layout_constraintTop_toTopOf="@+id/textView_Craft_C_2" />

    <TextView
        android:id="@+id/textView_Craft_C_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="뜻"
        android:textSize="28sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/view_Craft"
        app:layout_constraintTop_toBottomOf="@+id/textView_Craft_C_2" />

    <EditText
        android:id="@+id/editTextText_Craft_C_3"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="top|start"
        android:hint="단어의 뜻을 적어주세요"
        android:inputType="textMultiLine"
        android:maxLength="13"
        android:maxLines="1"
        android:padding="8dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/editTextText_Craft_C_2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_Craft_C_3"
        app:layout_constraintTop_toTopOf="@+id/textView_Craft_C_3" />

    <TextView
        android:id="@+id/textView_Craft_U_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="단어"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/view_Craft"
        app:layout_constraintTop_toTopOf="@+id/view_Craft" />

    <EditText
        android:id="@+id/editTextText_Craft_U_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="출제할 단어"
        android:inputType="text"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textView_Craft_C_1"
        app:layout_constraintTop_toTopOf="@+id/textView_Craft_C_1" />

    <TextView
        android:id="@+id/textView_Craft_U_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="유의어"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/view_Craft"
        app:layout_constraintTop_toBottomOf="@+id/textView_Craft_C_1" />

    <EditText
        android:id="@+id/editTextText_Craft_U_2"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="정답이 될 유의어"
        android:inputType="text"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/view_Craft"
        app:layout_constraintTop_toBottomOf="@+id/textView_Craft_U_2" />

    <TextView
        android:id="@+id/textView_Craft_U_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="오답 단어"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/view_Craft"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_Craft_U_2" />

    <EditText
        android:id="@+id/editTextText_Craft_U_3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="오답이 될 임의의 단어"
        android:inputType="text"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/view_Craft"
        app:layout_constraintTop_toBottomOf="@+id/textView_Craft_U_3" />


</androidx.constraintlayout.widget.ConstraintLayout>